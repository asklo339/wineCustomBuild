+static struct adapter_info *read_adapters_info_from_file( int *adapter_info_size, DWORD *error )
+{
+    FILE *file;
+    struct adapter_info *adapters_info = NULL;
+    int list_size = 0;
+    const size_t line_size = 256;
+    char *line;
+
+    *adapter_info_size = 0;
+    *error = ERROR_SUCCESS;
+
+    file = fopen( ADAPTER_INFO_PATH, "r" );
+    if (!file)
+    {
+        WARN( "Failed to open adapter info file %s: %d\n", ADAPTER_INFO_PATH, errno );
+        *error = ERROR_FILE_NOT_FOUND;
+        return NULL;
+    }
+
+    line = malloc( line_size );
+    if (!line)
+    {
+        fclose( file );
+        *error = ERROR_OUTOFMEMORY;
+        return NULL;
+    }
+
+    while (fgets( line, line_size, file ))
+    {
+        int col = 0;
+        char *value = strtok( line, "," );
+        struct adapter_info *adapter_info;
+
+        if (!value) continue;
+
+        adapters_info = realloc( adapters_info, (list_size + 1) * sizeof(*adapters_info) );
+        if (!adapters_info)
+        {
+            free( line );
+            fclose( file );
+            *error = ERROR_OUTOFMEMORY;
+            return NULL;
+        }
+
+        adapter_info = &adapters_info[list_size];
+        memset( adapter_info, 0, sizeof(*adapter_info) );
+
+        while (value && col < 4)
+        {
+            if (col == 0) strncpy( adapter_info->name, value, sizeof(adapter_info->name) - 1 );
+            else if (col == 1 && inet_addr( value ) != INADDR_NONE) strncpy( adapter_info->ip_address, value, sizeof(adapter_info->ip_address) - 1 );
+            else if (col == 2 && inet_addr( value ) != INADDR_NONE) strncpy( adapter_info->netmask, value, sizeof(adapter_info->netmask) - 1 );
+            else if (col == 3 && inet_addr( value ) != INADDR_NONE) strncpy( adapter_info->gateway, value, sizeof(adapter_info->gateway) - 1 );
+            value = strtok( NULL, "," );
+            col++;
+        }
+        if (col == 4 && adapter_info->ip_address[0]) list_size++;
+    }
+
+    free( line );
+    fclose( file );
+    *adapter_info_size = list_size;
+    return adapters_info;
+}
